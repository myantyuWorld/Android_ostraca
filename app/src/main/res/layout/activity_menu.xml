<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yuichi_oba.ostraca.MenuActivity"
    android:background="@drawable/hero_img">


    <TextView
        android:text="教員名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_menu_tea_id"
        android:layout_alignStart="@+id/txt_menu_tea_id"
        android:layout_marginTop="24dp"
        android:id="@+id/txt_menu_tea_name" />

    <TextView
        android:text="教員名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_menu_tea_name"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView7" />

    <TextView
        android:text="教員ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/txt_menu_tea_id"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/ibn_input" />

    <TextView
        android:text="教員ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/txt_menu_tea_id"
        android:layout_alignBottom="@+id/txt_menu_tea_id"
        android:layout_alignStart="@+id/ibn_input" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_border_color_black_24dp"
        android:id="@+id/ibn_input"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/txt_menu_tea_name"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_library_books_black_24dp"
        android:id="@+id/ibn_attend"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/txt_menu_tea_name" />

</RelativeLayout>
